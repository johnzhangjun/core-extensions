        "responses": {
          "200": {
            "description" : "Retrieves the baseline response for the rule.",
            "x-example":
            {
              "rt": ["oic.r.rule"],
              "if": ["oic.if.ll", "oic.if.baseline"],
              "links": [
                {
                  "href": "/ruleinputcollection",
                  "rt":   ["oic.wk.col"],
                  "if":   ["oic.if.ll","oic.if.baseline"],
                  "p":    {"bm": 3},
                  "eps": [
                    {"ep": "coaps://[fe80::b1d6]:1111"}
                  ]
                },
                {
                  "href": "/ruleexpression",
                  "rt":   ["oic.r.rule.expression"],
                  "if":   ["oic.if.rw","oic.if.baseline"],
                  "p":    {"bm": 3},
